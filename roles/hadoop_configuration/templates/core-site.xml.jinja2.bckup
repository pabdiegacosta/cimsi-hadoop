<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property>
        <name>fs.defaultFS</name>
        <value>hdfs://{{ groups['master'][0] }}:{{ hdfs_namenode_port | default(8020) }}</value>
    </property>
    <property>
        <name>hadoop.tmp.dir</name>
        <value>{{ hdfs_temp_dir }}</value>
	<description>A base for other temporary directories.</description>
    </property>
</configuration>
